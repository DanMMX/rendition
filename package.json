{
  "name": "rendition",
  "version": "3.26.1",
  "description": "Resin Components Component",
  "repository": {
    "type": "git",
    "url": "https://github.com/resin-io-modules/rendition"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./typings/rendition.d.ts",
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "rimraf dist && tsc",
    "build:storybook": "build-storybook -o .out",
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha --require ts-node/register test/*.spec.js",
    "eslint": "eslint src test",
    "eslint-fix": "eslint src test --fix",
    "tslint": "tslint -t stylish \"src/**/*.ts\" \"src/**/*.tsx\" \"typings.d.ts\"",
    "tslint-fix": "tslint -t stylish --fix \"src/**/*.ts\" \"src/**/*.tsx\" \"typings.d.ts\"",
    "lint": "npm run eslint && npm run tslint",
    "precommit": "lint-staged",
    "prettify-js": "prettier --config .prettierrc-js --write \"src/**/*.js\" \"test/**/*.js\"",
    "prettify-ts": "prettier --config .prettierrc-ts --write \"src/**/*.ts\" \"src/**/*.tsx\" \"typings.d.ts\"",
    "prettify": "npm run prettify-js && npm run eslint-fix && npm run prettify-ts && npm run tslint-fix",
    "deploy": "npm run build:storybook && gh-pages -d .out"
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.4.0",
    "@storybook/addon-info": "3.2.9",
    "@storybook/react": "3.2.8",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.5",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "1.0.0",
    "git-url-parse": "^7.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.1",
    "mocha": "^3.5.0",
    "prettier": "^1.9.2",
    "react": "^15.6.2",
    "react-dom": "^15.6.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^3.0.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/color": "^2.0.0",
    "@types/lodash": "^4.14.77",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^15.0.0",
    "@types/react-dom": "^15.0.0",
    "@types/react-icons": "^2.2.4",
    "@types/recompose": "^0.24.2",
    "@types/uuid": "^3.4.3",
    "color": "^2.0.0",
    "color-hash": "^1.0.3",
    "copy-to-clipboard": "^3.0.8",
    "grid-styled": "2.0.0-10",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "paths-js": "^0.4.7",
    "react-aria-tooltip": "^1.2.1",
    "react-icons": "^2.2.5",
    "recompose": "0.25.0",
    "regex-parser": "^2.2.7",
    "resin-device-status": "^1.1.1",
    "resin-semver": "^0.10.0",
    "showdown": "^1.7.3",
    "styled-grid": "1.0.0-beta.1",
    "styled-system": "^1.0.5",
    "tag-hoc": "1.0.0",
    "uuid": "^3.2.1",
    "xterm": "^3.2.0"
  },
  "lint-staged": {
    "{src, test}/**/*.js": [
      "prettier --config .prettierrc-js --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --config .prettierrc-ts --write",
      "tslint --fix",
      "git add"
    ]
  }
}
